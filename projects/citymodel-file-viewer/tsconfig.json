{
  "compilerOptions": {
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "es6",
    "target": "es6",
    "allowJs": false,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "experimentalDecorators": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}